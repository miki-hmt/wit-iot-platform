<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wit.iot.device.mapper.BsDeviceTelemetryDao">

	<resultMap id="BaseResultMap" type="com.wit.iot.device.domain.BsDeviceTelemetry">
		<id column="id" property="id" jdbcType="INTEGER"/>
		<id column="device_id" property="deviceId" jdbcType="INTEGER"/>
		<id column="good_count" property="goodCount" jdbcType="INTEGER"/>
		<id column="bad_count" property="badCount" jdbcType="INTEGER"/>
		<id column="state" property="state" jdbcType="INTEGER"/>
		<id column="createtime" property="createtime" jdbcType="TIMESTAMP"/>
	</resultMap>
	<sql id="Base_Column_List">
		id, device_id, good_count, bad_count, state, createtime
	</sql>

	<select id="selectDeviceList" parameterType="com.wit.iot.device.domain.vo.DeviceTelemetryVO" resultMap="BaseResultMap">
		select * from bs_device_telemetry
		<if test="offset != null and offset != ''">
			limit #{offset, jdbcType="INTEGER"}, #{dataSize, jdbcType="INTEGER"}
		</if>
	</select>
</mapper>